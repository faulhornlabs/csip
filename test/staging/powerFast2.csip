import Prelude

// object code types and functions (foreign function interface)
Int : Ty
One : Int
Mul : Int -> Int -> Int
Add : Int -> Int -> Int

sqr := \a -> Mul a a

(+) = Add

(^) : Int -> Nat -> Int
a ^ 0 = One
a ^ 1 = a
a ^ n | even n = sqr (a ^ div n 2)
a ^ Succ n = do
  c := a
  Mul c (c ^ n)

